<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
  <%= form.label :title, class: "form-control-label", style: "display: block" %>
  <%= form.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :start, class: "form-control-label", style: "display: block" %>
  <%= form.date_field :start, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :end, class: "form-control-label", style: "display: block" %>
  <%= form.date_field :end, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.hidden_field :user_id, value: current_user.id %>
</div>

<div class="form-group">
  <%= form.label :req_mail, "Requester Mail", class: "form-control-label", style: "display: block" %>
  <%= form.text_field :req_mail, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.submit class: "btn btn-primary mt-2" %>
</div>
<% end %>
