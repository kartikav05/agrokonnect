
<%= stylesheet_link_tag "style_1" %>
<div class="p-5 my-4 bg-body-tertiary rounded-3">
  <div class="container-fluid py-5 px-5 my-2 my-form">
    <h1 class="display-5 fw-bold text-success text-center">My Profile</h1>

    <div class="row mt-4">
      <div class="col-lg-3">
        <% if @user.profile_picture.attached? %>
          <div class="mb-3">
            <%= image_tag @user.profile_picture, style: 'width: 140px' %>
          </div>
        <% end %>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-dark ms-3' %>
      </div>

      <div class="col-lg-9">
        <div class="mt-2">
          <strong>Name:</strong>
          <%= @user.name %>
        </div>

        <div class="mt-2">
          <strong>Email:</strong>
          <%= @user.email %>
        </div>

        <div class="mt-2">
          <strong>Phone Number:</strong>
          <%= @user.phone_number %>
        </div>

        <div class="mt-2">
          <strong>Description:</strong>
          <%= @user.description %>
        </div>
      </div>
    </div>
    
    <div class="row mt-4">
      <div class="col-md-6 mb-2">
        <div class="d-grid gap-2">
          <%= link_to 'List Tools', '/tools/new', class: 'btn btn-outline-success my-btn' %>
        </div>
      </div>
      <div class="col-md-6 mb-2">
        <div class="d-grid gap-2">
          <%= link_to 'List Jobs', '/tasks/new', class: 'btn btn-outline-success my-btn ' %>
        </div>
      </div>
      <div class="col-md-6 mb-2">
        <div class="d-grid gap-2">
          <%= link_to 'View my Listings', '/listings/mylistings', class: 'btn btn-outline-info my-btn' %>
        </div>
      </div>
      <div class="col-md-6 mb-2">
        <div class="d-grid gap-2">
          <%= link_to 'Remove my Listings', '/listings/mylistings', class: 'btn btn-outline-danger my-btn ' %>
        </div>
      </div>
    </div>
  </div>
</div>

