<div class="container" style="margin-top:100px">
  <div class="row">
    <% @mytasks.each do |task| %>
      <div class="col-sm-6 mb-4">
        <div class="card text-center" style="background-color: #D6E6D6; max-width: 500px; margin: 0 auto;">
          <div class="card-body">
            <h3 class="card-title">
              <%= task.taskname %>
            </h3>
            <p class="card-text">Start Date: <%= task.startdate %>
            </p>
            <p class="card-text">End Date: <%= task.enddate %>
            </p>
            <p class="card-text">Compensation: <%= task.componsation %>
            </p>
             <p class="card-text">Location:<%= task.location %>
            </p>
            <p class="card-text">Description:<%= task.taskdesc %>
            </p>
            <p>
              <%= link_to "Edit this task" , task ,class:'btn btn-primary' %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>